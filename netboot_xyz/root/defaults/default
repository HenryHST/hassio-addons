server {
	listen 80;
	server_name _;
	
	# Security: Limit request methods
	if ($request_method !~ ^(GET|HEAD)$) {
		return 405;
	}
	
	location / {
		root /assets;
		autoindex on;
		autoindex_exact_size off;
		autoindex_localtime on;
		
		# Security: Disable access to hidden files
		location ~ /\. {
			deny all;
			access_log off;
			log_not_found off;
		}
	}
	
	# Security: Deny access to sensitive files
	location ~ ^/(config|etc|usr/bin) {
		deny all;
		return 404;
	}
}
